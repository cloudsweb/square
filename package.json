{
  "scripts": {
    "dbcreate": "pg_ctl -D data init",
    "dbstart": "pg_ctl -D data -o '-p7039' -l postgres.log start",
    "dbshell": "psql -p7039 posts",
    "dbstop": "pg_ctl -D data stop",
    "diesel": "diesel --database-url postgresql://localhost:7039/posts",
    "dev-build": "cargo watch -w server --why -x build",
    "dev-run": "cargo watch -w target/debug/square-core -w .env --ignore-nothing --poll -s target/debug/square-core",
    "web": "yarn --cwd web",
    "dev-web": "yarn --cwd web dev"
  }
}
